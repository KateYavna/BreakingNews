<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clRoot"
        android:layout_width="match_parent"
        android:layout_height="337dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="380dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/clNews2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="173dp"
            android:layout_height="168dp"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/floodtragedy" />

        <TextView
            android:id="@+id/tvHeading"
            style="@style/headings"
            android:layout_width="159dp"
            android:layout_height="167dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:paddingTop="5dp"
            android:text="@string/flood_tragedy_heading"
            app:layout_constraintStart_toEndOf="@+id/ivPhoto"
            app:layout_constraintTop_toTopOf="@+id/ivPhoto" />

        <TextView
            android:id="@+id/tvText"
            style="@style/text"
            android:layout_width="410dp"
            android:layout_height="165dp"
            android:layout_marginTop="2dp"
            android:text="@string/flood_tragedy_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ivPhoto"
            app:layout_constraintTop_toBottomOf="@+id/tvHeading" />

        <ImageView
            android:id="@+id/ivRedHeart"
            android:layout_width="44dp"
            android:layout_height="40dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:scaleType="fitXY"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/redheart" />

        <TextView
            android:id="@+id/tvCounter"
            style="@style/text"
            android:layout_width="46dp"
            android:layout_height="34dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:text="@string/counter"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivRedHeart" />

        <ImageView
            android:id="@+id/ivHeart"
            android:layout_width="44dp"
            android:layout_height="40dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCounter"
            app:srcCompat="@drawable/heart" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clNews2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/ivPhoto2"
            android:layout_width="178dp"
            android:layout_height="174dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/floodtragedy" />

        <TextView
            android:id="@+id/tvHeading2"
            style="@style/headings"
            android:layout_width="162dp"
            android:layout_height="174dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:text="@string/flood_tragedy_heading"
            app:layout_constraintStart_toEndOf="@+id/ivPhoto2"
            app:layout_constraintTop_toTopOf="@+id/ivPhoto2" />

        <TextView
            android:id="@+id/tvText2"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/flood_tragedy_text"
            app:layout_constraintStart_toStartOf="@+id/ivPhoto2"
            app:layout_constraintTop_toBottomOf="@+id/ivPhoto2" />

        <ImageView
            android:id="@+id/ivRedHeart2"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:scaleType="fitXY"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/redheart" />

        <TextView
            android:id="@+id/tvCounter2"
            style="@style/text"
            android:layout_width="40dp"
            android:layout_height="43dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:text="@string/counter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivRedHeart2" />

        <ImageView
            android:id="@+id/ivHeart2"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCounter2"
            app:srcCompat="@drawable/heart" />

        <ImageView
            android:id="@+id/ivComment1"
            android:layout_width="80dp"
            android:layout_height="69dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvText2"
            app:srcCompat="@drawable/cat_with_spectacles" />

        <TextView
            android:id="@+id/tvComment1"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/comment1"
            app:layout_constraintStart_toEndOf="@+id/ivComment1"
            app:layout_constraintTop_toTopOf="@+id/ivComment1" />

        <ImageView
            android:id="@+id/ivComment2"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivComment1"
            app:srcCompat="@drawable/dog" />

        <TextView
            android:id="@+id/tvComment2"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/comment2"
            app:layout_constraintStart_toEndOf="@+id/ivComment2"
            app:layout_constraintTop_toTopOf="@+id/ivComment2" />

        <ImageView
            android:id="@+id/ivComment1Heart"
            android:layout_width="41dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/ivComment1"
            app:layout_constraintStart_toEndOf="@+id/ivComment1"
            app:srcCompat="@drawable/heart" />

        <ImageView
            android:id="@+id/ivComment1RedHeart"
            android:layout_width="47dp"
            android:layout_height="31dp"
            android:scaleType="fitXY"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/tvComment1Counter"
            app:layout_constraintTop_toTopOf="@+id/tvComment1Counter"
            app:srcCompat="@drawable/redheart" />

        <TextView
            android:id="@+id/tvComment1Counter"
            style="@style/text"
            android:layout_width="49dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/counter"
            app:layout_constraintStart_toEndOf="@+id/ivComment1Heart"
            app:layout_constraintTop_toTopOf="@+id/ivComment1Heart" />

        <ImageView
            android:id="@+id/ivComment2Heart"
            android:layout_width="44dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/ivComment2"
            app:layout_constraintStart_toEndOf="@+id/ivComment2"
            app:srcCompat="@drawable/heart" />

        <TextView
            android:id="@+id/tvComment2Counter"
            style="@style/text"
            android:layout_width="50dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:text="@string/counter"
            app:layout_constraintStart_toEndOf="@+id/ivComment2Heart"
            app:layout_constraintTop_toTopOf="@+id/ivComment2Heart" />

        <ImageView
            android:id="@+id/ivComment2RedHeart"
            android:layout_width="43dp"
            android:layout_height="33dp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/tvComment2Counter"
            app:layout_constraintTop_toTopOf="@+id/tvComment2Counter"
            app:srcCompat="@drawable/redheart" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>